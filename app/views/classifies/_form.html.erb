<%= form_with(model: classify) do |form| %>
<% if classify.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(classify.errors.count, "error") %> prohibited this classify from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% classify.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :classification_id, class: label_class %>
          <%= form.number_field :classification_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :type, class: label_class %>
          <%= form.text_field :type, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if classify.persisted? %>
<%= link_to "Cancel", classify, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", classifies_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
