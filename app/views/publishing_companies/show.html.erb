<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Publishing_company</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to publishing_companies_path, class: button_class(theme: "transparent") do %>
      All Publishing_companies
      <% end %>
      <%= link_to edit_publishing_company_path(@publishing_company), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Publisher:</p>
        <p><%= @publishing_company.publisher_id %></p>
      </li>
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @publishing_company.name %></p>
      </li>
  </ul>
</div>
