<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Book_borrow</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to book_borrows_path, class: button_class(theme: "transparent") do %>
      All Book_borrows
      <% end %>
      <%= link_to edit_book_borrow_path(@book_borrow), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Coupon borrow:</p>
        <p><%= @book_borrow.coupon_borrow_id %></p>
      </li>
      <li>
        <p class="font-semibold">Title:</p>
        <p><%= @book_borrow.title %></p>
      </li>
      <li>
        <p class="font-semibold">Author:</p>
        <p><%= @book_borrow.author_id %></p>
      </li>
      <li>
        <p class="font-semibold">Publisher:</p>
        <p><%= @book_borrow.publisher_id %></p>
      </li>
  </ul>
</div>
