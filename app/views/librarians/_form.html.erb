<%= form_with(model: librarian) do |form| %>
<% if librarian.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(librarian.errors.count, "error") %> prohibited this librarian from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% librarian.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :librarian_id, class: label_class %>
          <%= form.number_field :librarian_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :name, class: label_class %>
          <%= form.text_field :name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :phone_number, class: label_class %>
          <%= form.text_field :phone_number, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if librarian.persisted? %>
<%= link_to "Cancel", librarian, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", librarians_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
